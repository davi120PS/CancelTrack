<Window x:Class="CancelTrack.Interfaces.Producto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CancelTrack.Interfaces"
        mc:Ignorable="d"
        Title="Producto" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="UserTable" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" ColumnWidth="*" IsSynchronizedWithCurrentItem="True" Margin="92,118,92,42" SelectionChanged="UserTable_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding PkProducto}" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                <DataGridTextColumn Header="IdProveedor" Binding="{Binding FkProveedor}" />
                <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" />
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" />
                <DataGridTextColumn Header="CInventario" Binding="{Binding CantidadInventario}" />

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Producto" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Cascadia Code"/>
    </Grid>
</Window>
